#page
	min-height 100%
	display grid
	grid-template-rows auto 1fr auto
	.sticky
		display block
	.hentry
		margin 0 0 1.5em
		display block
		width 100%
		max-width $site-width
		margin 0 auto
	.byline
	.updated:not(.published)
		display none
	.single .byline
	.group-blog .byline
		display inline
	.page-content
	.entry-content
	.entry-summary
		margin 1.5em 0 0
	.page-links
		clear both
		margin 0 0 1.5em
	#masthead
	#primary
	#secondary
	#colophon
		padding 1em

@media screen and (min-width 37.5em)
	#masthead
	#primary
	#secondary
	#colophon
		padding 0 2em

/*******************************
 *
 * Homepage
 *
*******************************/
.home
	#content
		& > p
			display none
		.wp-block-gallery
			margin 0 0 2em 0
			padding 0
			display block
			opacity 0
			transition opacity .4s
			+widerThan($mobileL)
				height 500px
			&.is-hidden
				display none
			&.flickity-enabled
				opacity 1
			.flickity-slider
				display flex
				align-items center
				+widerThan($tabletS)
					align-items flex-start
				.blocks-gallery-item
					display block
					margin 0 30px 0 0
					+widerThan($mobileS)
						width min-content
						height 100%
					figure
						display flex
						justify-content center
						align-items center
						+widerThan($mobileS)
							display block
							width max-content
						img
							max-height 300px
							+widerThan($mobileS)
								max-height 400px
							+widerThan($mobileL)
								max-height 500px

/*******************************
 *
 * Clients & Password-protected pages
 *
*******************************/
.client-access
	.entry-content
		form
			input[type="submit"]
				margin-top 10px
.content-area
	.post-password-form
		input[type="submit"]
			margin-top 10px

/*******************************
 *
 * Investment page
 *
*******************************/
.investment-price-table
	table
		tr
			td
				padding 3%
				border 1px solid #ccc